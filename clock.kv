#:import NoTransition kivy.uix.screenmanager.NoTransition

<ClockScreen>:
    name:'clock'
    Label:
        bold:True
        text: '00:00:00'
        id : show_time
        markup: True
        font_size: '60sp'
        color:1,1,1,1
        height:root.height*.76
        size_hint:(1,None)
        valign: 'middle'
        halign: 'center'
        text_size:root.width, root.height
<StopWatchScreen>:
    name:'stopwatch'
    Label:
        text:'stopwatch'
<TimerScreen>:
    name:'timer'
    Label:
        text:'timer'

<ScreenManagerClass>:
    ClockScreen:
    StopWatchScreen:
    TimerScreen:

<Main>:
    screen_manager: screen_manager
    cols:1
    Label:
        id:header
        halign: 'left'
        valign: 'middle'
        size_hint: (1,None)
        text_size: root.size
        height: root.height *0.1
    ## Line break
    Label:
        canvas.before:
            Color:
                rgba:0,0,1,1
            Rectangle:
                pos:self.pos
                size:self.size
        height:2
        size_hint:(1,None)
    
    ScreenManagerClass:
        id:screen_manager
    ## Screeen change buttons 
    GridLayout:
        cols:3
        padding: 5
        spacing: 5
        height: root.height *0.05
        size_hint: (1,None)
        
        Button:
            text: 'Clock'
            background_color: .1, .1, .1, 1
            on_release:app.click('clock','right')
        Button:
            text: 'Stopwatch'
            background_color: .1, .1, .1, 1
            on_release: app.click('stopwatch','down')
        Button:
            text: 'Timer'
            background_color: .1, .1, .1, 1
            on_release: app.click('timer','left')
    ## Line break
    Label:
        canvas.before:
            Color:
                rgba:0,0,1,1
            Rectangle:
                pos:self.pos
                size:self.size

        height:2
        size_hint:(1,None)
    ## Empty
    Label:
        size_hint:(1,None)
        height:20
        